<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">

        <div>
            <a class="text-blue-800" href="/">Home</a>
        </div>
        <h1 class="tracking-tighter text-3xl py-2">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length > 0){ %>
                <% users.forEach((user)=>{  %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg ">
                        <div class="w-full h-72 rounded-lg bg-zinc-400 overflow-hidden">
                            <img class="w-full h-full object-cover object-top" src="<%= user.image  %>" alt="">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                        <h4 class="text-zinc-500"><%= user.email %></h4>
                        <div class="flex gap-3 mt-10 ">
                            <a class="text-blue-800" href="/edit/<%= user._id %>">Edit User</a>
                            <a class="text-red-800" href="/delete/<%= user._id  %>">Delete User</a>
                        </div> 
                    </div>
                   <%  })   %>

                <% } %>
           
        </div>
    </div>
</body>
</html>